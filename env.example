# Firebase Configuration
NEXT_PUBLIC_FIREBASE_PROJECT_ID=growreporter-prod
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=growreporter-prod.firebaseapp.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=growreporter-prod.appspot.com

# Development Settings
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true
NEXT_PUBLIC_USE_MOCK_API=true
NEXT_PUBLIC_DEVELOPMENT_MODE=true

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_ANALYSIS=false
NEXT_PUBLIC_ENABLE_CUSTOM_KPI=false
NEXT_PUBLIC_ENABLE_SHARING=false
NEXT_PUBLIC_ENABLE_ADMIN=false

# API Keys (Firebase Functions Config)
# firebase functions:config:set google.analytics_client_id="your_client_id"
# firebase functions:config:set google.analytics_client_secret="your_client_secret"
# firebase functions:config:set microsoft.client_id="your_microsoft_id"
# firebase functions:config:set gemini.api_key="your_gemini_key"

# Security
CREDENTIAL_ENCRYPTION_KEY=your_32_character_encryption_key
CSRF_SECRET=your_csrf_secret_key

# Development Tools
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
