rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーコレクション
    match /users/{userId} {
      // 自分のユーザー情報のみ読み書き可能
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // サイトコレクション
    match /sites/{siteId} {
      // 自分が登録したサイトのみ読み書き可能
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || !('userId' in resource.data));
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && 
        (
          // 既存ドキュメントの所有者チェック
          (resource.data.userId == request.auth.uid || !('userId' in resource.data)) &&
          // 更新後のuserIdが自分のuidと一致することを確認
          request.resource.data.userId == request.auth.uid
        );
      allow delete: if request.auth != null && 
        (resource.data.userId == request.auth.uid || !('userId' in resource.data));
    }
    
    // レポートコレクション
    match /reports/{reportId} {
      // 自分のサイトのレポートのみ読み書き可能
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // OAuthトークンコレクション
    match /oauth_tokens/{tokenId} {
      // 自分が作成したトークンのみ読み書き可能
      allow read: if request.auth != null && resource.data.user_uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.user_uid == request.auth.uid;
      allow update: if request.auth != null && resource.data.user_uid == request.auth.uid;
      allow delete: if request.auth != null && resource.data.user_uid == request.auth.uid;
    }
    
    // AI要約コレクション（旧システム、互換性のため保持）
    match /aiSummaries/{summaryId} {
      // 自分が作成した要約のみ読み込み可能
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // 書き込みはCloud Functionsのみ
      allow write: if false;
    }
    
    // AI分析キャッシュコレクション（新システム）
    match /aiAnalysisCache/{cacheId} {
      // 自分が作成したキャッシュのみ読み込み可能
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // 書き込みはCloud Functionsのみ
      allow write: if false;
    }
    
    // 改善課題コレクション
    match /improvements/{improvementId} {
      // 認証済みユーザーが自分のサイトに関連する改善課題のみ読み書き可能
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.createdBy == request.auth.token.email;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // ユーザープロフィールコレクション（現在はusersコレクションを使用）
    // match /userProfiles/{userId} {
    //   // 自分のプロフィールのみ読み書き可能
    //   allow read: if request.auth != null && request.auth.uid == userId;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
    
    // 管理者ユーザーコレクション
    match /adminUsers/{adminId} {
      // 自分自身の管理者情報のみ読み取り可能
      allow read: if request.auth != null && request.auth.uid == adminId;
      // 作成・更新・削除は禁止（Firebase Consoleで手動管理）
      allow write: if false;
    }
    
    // プラン変更履歴コレクション
    match /planChangeHistory/{historyId} {
      // 管理者のみ読み取り可能（Cloud Functionsで権限チェック済み）
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid));
      // 書き込みはCloud Functionsのみ
      allow write: if false;
    }
    
    // 管理者アクティビティログコレクション
    match /adminActivityLogs/{logId} {
      // 管理者のみ読み取り可能
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid));
      // 書き込みはCloud Functionsのみ
      allow write: if false;
    }
    
    // メールコレクション（Firebase Extensions用）
    match /mail/{mailId} {
      // 書き込みはCloud Functionsのみ
      allow write: if false;
      // 読み取りも禁止
      allow read: if false;
    }
    
    // 個別制限コレクション
    match /customLimits/{userId} {
      // 管理者のみ読み取り可能
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role in ['admin', 'editor', 'viewer'];
      // 書き込みはCloud Functionsのみ（管理者権限チェックは関数内で実施）
      allow write: if false;
    }
  }
}

